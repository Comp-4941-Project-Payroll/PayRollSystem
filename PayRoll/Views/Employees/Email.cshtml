@model PayRoll.Models.Employee
@{
    ViewBag.Title = "Email";
}

<h2>Email</h2>
@using (Html.BeginForm("SendEmail", "Employees", FormMethod.Post))
{
    @Html.HiddenFor(model => model.EmployeeId)
@Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Send Message</h4>
    <hr />

    <div class="form-group">
        @Html.Label("Subject", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox("Subject", null, new { @class = "form-control" })
            @Html.ValidationMessage("Subject", "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Body", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextArea("Body", new { @class = "form-control", @rows = 5, @style = "max-width:none;" })
            @Html.ValidationMessage("Body", "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Send" class="btn btn-default" />
        </div>
    </div>
</div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}