@model IEnumerable<PayRoll.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<h2>Staff</h2>

<p>
    @Html.ActionLink("Add Member", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullOrPartTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Position.PositionId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Seniority)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HourlyRate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DepartmentType)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FName) @Html.DisplayFor(modelItem => item.LName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FullOrPartTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Position.PositionId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Seniority)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HourlyRate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DepartmentType)
        </td>
        <td>
            @Html.ActionLink("Add Shift", "AddShift", new { id = item.EmployeeId }) |
            @Html.ActionLink("Edit", "Edit", new { id = item.EmployeeId }) |
            @Html.ActionLink("Payrolls", "Index/" + item.EmployeeId, "PayrollManage") |
            @Html.ActionLink("Delete", "Delete", new { id = item.EmployeeId }) |
            @Html.ActionLink("Email", "Email", new { id = item.EmployeeId })
        </td>
    </tr>
}

</table>
