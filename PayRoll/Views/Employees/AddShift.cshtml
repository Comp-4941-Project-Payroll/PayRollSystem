@model PayRoll.Models.Employee

@{
    ViewBag.Title = "AddShift";
}

<h2>AddShift for @Html.DisplayFor(model => Model.FName)</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.Shift.StartTime, htmlAttributes: new { @class = "control-label col-md-2", @style = "width:auto;" })
            <div class="col-md-10" style="float:none;">
                @Html.EditorFor(model => model.Shift.StartTime, new { htmlAttributes = new { @class = "form-control date-picker" } })
                @Html.ValidationMessageFor(model => model.Shift.StartTime, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Shift.EndTime, htmlAttributes: new { @class = "control-label col-md-2", @style = "width:auto;" })
            <div class="col-md-10" style="float:none;">
                @Html.EditorFor(model => model.Shift.EndTime, new { htmlAttributes = new { @class = "form-control date-picker" } })
                @Html.ValidationMessageFor(model => model.Shift.EndTime, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
        @Html.Hidden("id", (string)@ViewBag.id)
    </div>
}
