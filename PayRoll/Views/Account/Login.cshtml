@using PayRoll.Models
@model LoginViewModel
@{
    ViewBag.Title = "PayRoll Management";
}

<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Employees", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <hr />

        <div class="form-group">
            @Html.Label("Employee ID", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.EmployeeId, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.EmployeeId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Log in" class="btn btn-default" />
                </div>
            </div>
        </div>
}
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </section>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">

                @using (Html.BeginForm("Index", "Managers", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    <input type="submit" value="Managers Log in" class="btn btn-default" />
                }

            </div>
        </div>
    </div>
</div>




